#!/bin/bash
# open tmux session with some panes

if [[ "$1" == "" ]]; then
    session="amadeus"
else
    session="$1"
fi

tmux has-session -t "$session" >> /dev/null
if [ $? -eq 0 ]; then
  echo reconnect
  tmux -2 attach-session -t "$session"
  exit
fi

echo new
tmux -2 new-session -s "$session" -n "desktop"

