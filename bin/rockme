#!/bin/bash
# open tmux session with some panes

if [[ "$1" == "" ]]; then
    session="amadeus"
else
    session="$1"
fi

tmux has-session -t "$session"
if [ $? != 0 ]; then
    tmux new-session -s "$session" -n "desktop" -d

    tmux split-window -t "$session":1 -v -l 30
    tmux select-pane  -t "$session":1 -l
    tmux split-window -t "$session":1 -h -l 100
    tmux select-pane  -t "$session":1 -l

    tmux select-window -t "$session":1
fi

tmux -2 attach-session -t "$session"
