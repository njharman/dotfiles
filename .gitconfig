# http://cheat.errtheblog.com/s/git/

[user]
  name = Norman J. Harman Jr.
  email = njharman@gmail.com
[core]
  filemode = true
  autocrlf = false
[branch]
  autosetupmerge = true

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st = status
  ci = commit
  co = checkout
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

  #br = branch
  #df = diff
  #dc = diff --cached
  #lg = log -p
  #ls = ls-files
  ## Show files ignored by git:
  #ign = ls-files -o -i --exclude-standard
