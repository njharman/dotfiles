# http://cheat.errtheblog.com/s/git/
[user]
  name = Norman J. Harman Jr.
  email = njharman@gmail.com
[apply]
  whitespace=warn
[core]
  filemode = true
  autocrlf = false
[http]
#  sslVerify = false
[branch]
  autosetupmerge = true
[push]
  default = simple

[alias]
  br = branch -a
  ci = commit --verbose
  co = checkout
  dc = diff --cached
  dh = diff HEAD
  ls = log -S
  rl = reflog
  st = status --short
  up = "!git remote update -p; git merge --ff-only @{u}"
  lg = log --graph --pretty=format:'%Cred%h%Creset %Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  llg = log --graph --pretty=format:'%Cred%h%Creset %Cred%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset%+b' --abbrev-commit --name-status
  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
  default = simple
